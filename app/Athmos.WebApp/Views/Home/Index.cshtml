@using Athmos.Application.UserServices.GetAllUsers;
@model List<GetAllUsersDTO>
@{
    ViewData["Title"] = "Home Page";
}

@if (Model.Count != 0)
{
    <table class="table table-dark">
        <thead>
            <tr>
                <th scope="col">Modificar</th>
                <th scope="col">Nombre</th>
                <th scope="col">Apellido</th>
                <th scope="col">Edad</th>
                <th scope="col">Correo</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var usuario in Model)
            {
                <tr>
                    <th scope="row">
                        <a class="btn btn-outline-info"
                           asp-area=""
                           asp-controller="Home"
                           asp-action="Modify"
                           asp-route-idUser="@usuario.Id">
                            Ir
                        </a>
                    </th>
                    <td>@usuario.Name</td>
                    <td>@usuario.Lastname</td>
                    <td>@usuario.Edad</td>
                    <td>@usuario.Email</td>
                </tr>
            }
        </tbody>
    </table>

}
else
{
    <div class="card">
        <div class="card-header">
            comenzamos a ver todos los usuarios
        </div>
        <div class="card-body">
            <h5 class="card-title">Sin Registros aun</h5>
            <p class="card-text">Aun no tiene personas, debes crear una para comenzar</p>
            <a class="btn btn-outline-dark" asp-area="" asp-controller="Home" asp-action="Create">Crear</a>
        </div>
    </div>
}
